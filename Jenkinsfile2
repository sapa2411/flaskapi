  environment {
    registry = "mguazzardo/curso-jenkins"
    registryCredential = 'dockerkub'
  } 
 agent any  
  stages {
       stage('Deploy and Test Image') {
      steps{
          
          sh '''
          chmod +x ./test.sh
          ./test.sh
          docker run -d  -p 5000:5000 --name flaskapi flaskapi
          '''
          
      }//steps
    } //stage
    
        
  }//stages
}//pipeline
